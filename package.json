{
  "name": "dyslexia-mitigation",
  "displayName": "Dyslexia Mitigation",
  "description": "Helps users with dyslexia by allowing text customization in VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dyslexia-mitigation.showMenu",
    "onCommand:dyslexia-mitigation.setFontSize",
    "onCommand:dyslexia-mitigation.setFontFamily",
    "onCommand:dyslexia-mitigation.setLineSpacing",
    "onCommand:dyslexia-mitigation.textToSpeech",
    "onCommand:dyslexia-mitigation.syllableBreakdown",
    "onCommand:dyslexia-mitigation.enableReadingGuide",
    "onCommand:dyslexia-mitigation.disableReadingGuide",
    "onCommand:dyslexia-mitigation.toggleTextMasking",
    "onCommand:dyslexia-mitigation.toggleCursorTracking"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dyslexia-mitigation.showMenu",
        "title": "Show Dyslexia Mitigation Menu"
      },
      {
        "command": "dyslexia-mitigation.setFontSize",
        "title": "Set Font Size for Dyslexia"
      },
      {
        "command": "dyslexia-mitigation.setFontFamily",
        "title": "Set Font Family for Dyslexia"
      },
      {
        "command": "dyslexia-mitigation.setLineSpacing",
        "title": "Set Line Spacing for Dyslexia"
      },
      {
        "command": "dyslexia-mitigation.textToSpeech",
        "title": "Text to Speech"
      },
      {
        "command": "dyslexia-mitigation.enableReadingGuide",
        "title": "Enable Reading Guide"
      },
      {
        "command": "dyslexia-mitigation.disableReadingGuide",
        "title": "Disable Reading Guide"
      },
      {
        "command": "dyslexia-mitigation.toggleTextMasking",
        "title": "Toggle Text Masking"
      },
      {
        "command": "dyslexia-mitigation.toggleCursorTracking",
        "title": "Toggle Cursor Tracking"
      },
      {
        "command": "dyslexia-mitigation.toggleColorOverlay",
        "title": "Toggle Color Overlay"
      },
      {
        "command": "dyslexia-mitigation.toggleThemeBackground",
        "title": "Toggle Theme Background"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0"
  },
  "dependencies": {
    "chalk-animation": "^2.0.3",
    "syllable": "^5.0.1"
  }
}

{
  "name": "dyslexia-mitigation",
  "displayName": "dyslexia-mitigation",
  "description": "Help users with dyslexia use VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dyslexia-mitigation.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "dyslexia-mitigation.openFloatingMenu",
        "title": "Open Dyslexia Helper Menu"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.21.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
